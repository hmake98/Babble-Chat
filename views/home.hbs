<div class="container-fluid">
  <div class="row">
    <nav class="col-md-2 d-none d-md-block bg-light sidebar">
      <div class="sidebar-sticky" id="style-1">
        <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
        {{user._id}}
        <input type="input" id="userid" value="{{user._id}}" hidden>
        <input type="input" id="username" value="{{user.username}}" hidden>
        <ul class="nav flex-column">
          {{#users}}
          <li class="nav-item users">
            <img src="http://www.drreddyforlife.com/wp-content/uploads/2018/05/user-placeholder-1.jpg" alt="Avatar"
              class="avatar">
            <span class="offline-dot" id="{{this._id}}"></span>
            {{this.username}}
          </li>
          {{/users}}
        </ul>
      </div>
    </nav>

    <main role="main" class="col-md-10 ml-sm-auto col-lg-10 px-4">
      <div class="chat">
        <p id="output"> </p>
      </div>
      <div class="row message-bar">
        <div class="col-md-10">
          <input class="form-control" placeholder="Enter message" id="message">
        </div>
        <div class="col-md-2">
          <button class="btn btn-primary" id="send"> Send </button>
        </div>
      </div>
    </main>
  </div>
</div>

<script src="https://code.jquery.com/jquery-3.4.0.min.js"
  integrity="sha256-BJeo0qm959uMBGb65z40ejJYGSgR7REI4+CW1fNKwOg=" crossorigin="anonymous"></script>
<script src="/socket.io/socket.io.js"></script>
<script>
  var socket = io();

  socket.on('connect', function () {
    console.log('Connected to server');
    socket.emit('joinroom', 'general');
    var userid = document.getElementById('userid').value;
    socket.emit('login', {
      userid: userid
    });
    socket.on('publish', (data) => {
      console.log(data);  
      for (let key in data.usersStatus) {
        console.log(key);
        if (data.usersStatus[key]) {
          if (key !== userid) {
            let user = document.getElementById(key);
            user.classList.remove('offline-dot');
            user.classList.add('online-dot');
            console.log(user)
          }
        } else {
          let user = document.getElementById(key);
          user.classList.remove('online-dot');
          user.classList.add('offline-dot');  
          console.log(user)
        }
      }
    });
  });
 
</script>